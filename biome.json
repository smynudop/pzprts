{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["*.js", "dist/*", "*.svelte"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noGlobalIsNan": "info"
      },
      "complexity": {
        "noExtraBooleanCast": "off",
        "useArrowFunction": "off",
        "noForEach": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "noInferrableTypes": "off",
        "useImportType": "info",
        "useSingleVarDeclarator": "off",
        "useTemplate": "off",
        "noUselessElse": "off"
      },
      "correctness": {
        "noConstantCondition": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
