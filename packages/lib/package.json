{
  "name": "@udop/penpa-player-lib",
  "version": "0.1.0",
  "description": "Scripts for handling puzzle objects",
  "type": "module",
  "sideEffects": false,
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pencil puzzle"
  ],
  "author": "udop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smynudop/pzprts"
  },
  "homepage": "https://github.com/smynudop/pzprts",
  "engines": {
    "node": ">= 20"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/lang/index.d.ts"
    },
    "./lang/*": {
      "import": "./dist/lang/*.js",
      "types": "./dist/lang/*.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && vite build",
    "check": "tsc --noEmit",
    "lint": "biome lint",
    "lint-fix": "biome lint --write",
    "lint-fix-unsafe": "biome lint --write --unsafe",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "rollup-plugin-visualizer": "^5.14.0",
    "source-map-explorer": "^2.5.3",
    "terser": "^5.39.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2"
  }
}
